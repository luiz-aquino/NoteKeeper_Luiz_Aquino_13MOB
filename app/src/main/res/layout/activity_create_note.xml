<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luiza.notekeeper.CreateNoteActivity"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNewNote"
        android:minLines="15"
        android:gravity="top"
        android:text=""
        android:autoLink="all"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel_create_note"
            android:id="@+id/btnCancelNote"
            android:onClick="cancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_create_note"
            android:id="@+id/btnCreateNote"
            android:onClick="create"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_note"
            android:id="@+id/btn_share_Note"
            android:onClick="share"

            />
    </LinearLayout>
</LinearLayout>
